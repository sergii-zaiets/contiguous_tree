{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake release",
      "options": {
        "cwd": ".build_release"
      },
      "command": "cmake",
      "args": [
        "-DCMAKE_CXX_COMPILER=clang++-11",
        "-DCMAKE_C_COMPILER=clang-11",
        "-DCMAKE_BUILD_TYPE=Release",
        ".."
      ]
    },
    {
      "label": "cmake debug",
      "options": {
        "cwd": ".build_debug"
      },
      "command": "cmake",
      "args": [
        "-DCMAKE_CXX_COMPILER=clang++-11",
        "-DCMAKE_C_COMPILER=clang-11",
        "-DCMAKE_BUILD_TYPE=Debug",
        ".."
      ]
    },
    {
      "group": "build",
      "label": "build release",
      "dependsOn": [
        "cmake release"
      ],
      "options": {
        "cwd": ".build_release"
      },
      "command": "make",
      "args": [
        "-j4",
        "-C",
        ".",
        "all"
      ]
    },
    {
      "group": "build",
      "label": "build debug",
      "dependsOn": [
        "cmake debug"
      ],
      "options": {
        "cwd": ".build_debug"
      },
      "command": "make",
      "args": [
        "-j4",
        "-C",
        ".",
        "all"
      ]
    }
  ]
}